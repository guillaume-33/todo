<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href={{ asset("../public/asset/style/css/style.css") }}>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

    </head>
    <body>
    <header>

        <nav class="nav_header">
            <a href="{{ path('home') }}"><img class="logo_header" src="{{ asset('../public/asset/img/logo/logo_small.png') }}" ></a>

            <ul class="ul_header">
                {% if app.user %}
                <li class="li_header"><a class="a_header" href="{{ path('user_listes') }}">Mes listes</a></li>
                <li class="li_header"><a class="a_header" href="{{ path('app_logout') }}">Déconnexion</a></li>
                {% else %}
                <li class="li_header"><a class="a_header" href="{{ path('app_login') }}">Connexion</a></li>
                <li class="li_header"><a class="a_header" href="{{ path("user_inscription") }}">Créer compte</a></li>
                {% endif %}
            </ul>
        </nav>
        {% if app.user %}
         <p>Bonjour {{ app.user.prenom }}</p>
        {% endif %}
    </header>
        {% block main %}{% endblock %}

    <footer>

    </footer>
    </body>

</html>
